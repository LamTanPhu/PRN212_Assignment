<Window x:Class="PRN212_Assignment.Members.RegisterNewMember"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register New Member" Height="392" Width="429">
    <Grid Margin="10,0,10,-6">
        <Border BorderBrush="Black" BorderThickness="2" Background="White" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="260" Height="249">
            <StackPanel>
                <Label Content="Member ID" />
                <TextBox x:Name="memberIdTextBox" Width="200"/>
                <Label Content="Name" Margin="0,10,0,0" />
                <TextBox x:Name="nameTextBox" Width="200"/>
                <Label Content="Contact Information" Margin="0,10,0,0" />
                <TextBox x:Name="contactInfoTextBox" Width="200"/>
                <Button x:Name="registerButton" Content="Register" Margin="0,10,0,0" Width="100" Height="30" Click="RegisterButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
