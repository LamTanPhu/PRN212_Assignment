<Window x:Class="PRN212_Assignment.Reports.CreateReservationReports"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Assignment.Reports"
        mc:Ignorable="d"
        Title="Create Reservation" Height="287" Width="308">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Book ID:" />
            <TextBox Name="txtBookID" Width="200" Margin="0,0,0,10" />

            <TextBlock Text="Member ID:" />
            <TextBox Name="txtMemberID" Width="200" Margin="0,0,0,10" />

            <TextBlock Text="Reservation Date:" />
            <DatePicker Name="dpReservationDate" Width="200" Margin="0,0,0,20" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Add Reservation" Click="AddReservation_Click" Width="120" Margin="0,0,10,0" />
                <Button Content="Cancel" Click="Cancel_Click" Width="80" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
